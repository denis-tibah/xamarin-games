<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base"></style>

  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionModeOverlay">true</item>
  </style>

  <style name="multitasking_button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/button_top</item>
    <item name="android:layout_marginEnd">@dimen/textview_side_margin</item>
    <item name="android:layout_marginStart">@dimen/textview_side_margin</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textSize">@dimen/font_size</item>
  </style>

  <style name="multitasking_textview">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/textview_side_margin</item>
    <item name="android:layout_marginStart">@dimen/textview_side_margin</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textSize">@dimen/font_size</item>
  </style>
</resources>
